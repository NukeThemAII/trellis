{
  "name": "@trellis/contracts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "account": "make account",
    "account:generate": "node scripts-js/generateKeystore.js",
    "account:import": "node scripts-js/importAccount.js",
    "account:reveal-pk": "node scripts-js/revealPK.js",
    "build": "forge build",
    "chain": "make chain",
    "clean": "forge clean",
    "deploy": "node scripts-js/parseArgs.js",
    "flatten": "make flatten",
    "fork": "make fork FORK_URL=${1:-mainnet}",
    "format": "forge fmt && prettier --write ./scripts-js/**/*.js",
    "lint": "forge fmt --check && prettier --check ./scripts-js/**/*.js",
    "postinstall": "pnpm exec shx cp -n .env.example .env",
    "test": "forge test",
    "verify": "make verify RPC_URL=${1:-localhost}"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "envfile": "^6.22.0",
    "ethers": "^6.13.5",
    "prettier": "^3.5.3",
    "qrcode": "^1.5.4",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "shx": "^0.3.4"
  },
  "packageManager": "pnpm@10.19.0"
}
